{
  "dashboard": {
    "title": "URL Shortener - Simple Dashboard",
    "panels": [
      {
        "id": 1,
        "title": "Kong HTTP Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "kong_http_status",
            "legendFormat": "Status: {{code}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 2,
        "title": "Kong Bandwidth",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(kong_bandwidth[5m])",
            "legendFormat": "Bandwidth"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 3,
        "title": "Kong Request Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "kong_latency",
            "legendFormat": "Latency ({{type}})"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 4,
        "title": "All Kong Metrics",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "{__name__=~\"kong_.*\"}",
            "format": "table"
          }
        ],
        "datasource": "Prometheus"
      }
    ],
    "time": {"from": "now-5m", "to": "now"},
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1
  }
}
