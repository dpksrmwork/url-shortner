apiVersion: v1
kind: Secret
metadata:
  name: url-shortener-secrets
  namespace: url-shortener
type: Opaque
stringData:
  # Kong Database (PostgreSQL)
  kong-pg-password: "your_secure_kong_password"
  
  # Grafana Admin
  grafana-admin-password: "your_secure_grafana_password"
  
  # Redis
  redis-password: "your_secure_redis_password"
