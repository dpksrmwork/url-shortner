{
	"info": {
		"_postman_id": "url-shortener-collection",
		"name": "URL Shortener API",
		"description": "Complete API collection for URL Shortener service with FastAPI, Kong, and Kubernetes",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "URL Operations",
			"item": [
				{
					"name": "Shorten URL",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"url\": \"https://github.com/kubernetes/kubernetes\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/shorten",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"shorten"
							]
						},
						"description": "Create a short URL with auto-generated code"
					},
					"response": []
				},
				{
					"name": "Shorten URL with Custom Alias",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"url\": \"https://kubernetes.io/docs\",\n  \"custom_alias\": \"k8s-docs\",\n  \"user_id\": \"user123\",\n  \"ttl_days\": 365\n}"
						},
						"url": {
							"raw": "{{base_url}}/shorten",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"shorten"
							]
						},
						"description": "Create a short URL with custom alias and TTL"
					},
					"response": []
				},
				{
					"name": "Redirect to Long URL",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/{{short_code}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"{{short_code}}"
							]
						},
						"description": "Redirect to original URL (301 redirect)"
					},
					"response": []
				},
				{
					"name": "Get URL Statistics",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/stats/{{short_code}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"stats",
								"{{short_code}}"
							]
						},
						"description": "Get click statistics for a short URL"
					},
					"response": []
				}
			]
		},
